<?xml version="1.0" encoding="iso-8859-1" standalone="yes" ?>

<!--
    A TreeScan installation file.

    To compile it :
    - call /prj/treescan/installers/IzPack/bin/compile /prj/treescan/installers/IzPackInstaller/install_windows.xml -b . -o install_windows.jar -k standard
-->

<installation version="1.0">

    <!--
        The info section.
        The meaning of the tags should be natural ...
    -->
    <info>
        <appname>TreeScan</appname>
        <appversion>1.2</appversion>
        <appsubpath>TreeScan</appsubpath>
        <authors>
            <author name="Martin Kulldorff together with IMS Inc." email="kulldorff@treescan.org"/>
        </authors>
        <url>http://www.treescan.org/</url>
        <javaversion>1.6</javaversion>
        <writeinstallationinformation>no</writeinstallationinformation>
        <run-privileged/>
    </info>

    <!--
        The gui preferences indication.
        Sets the installer window to 640x480. It will not be able to change the size.
    -->
    <guiprefs width="700" height="480" resizable="yes">
        <modifier key="headingPanelCounter" value="progressbar"/>
        <modifier key="headingPanelCounterPos" value="inNavigationPanel"/>
    </guiprefs>

    <!--
        The locale section.
        Asks here to include the English and French langpacks.
    -->
    <locale>
        <langpack iso3="eng"/>
    </locale>

    <!--
        The resources section.
        The ids must be these ones if you want to use the LicencePanel and/or the InfoPanel.
    -->
    <resources>
        <res id="HTMLLicencePanel.licence" src="/prj/treescan/build/treescan/installers/documents/eula.html" />
        <res id="shortcutSpec.xml" src="/prj/treescan/build/treescan/installers/izpack/windows/Win_shortcutSpec.xml" />
        <res id="Installer.image" src="/prj/treescan/build/treescan/installers/resources/TreeScan.gif" />
        <res id="RegistrySpec.xml" src="/prj/treescan/build/treescan/installers/izpack/windows/RegistrySpec.xml" />
        <!-- Set the default installation directory shown in the TargetPanel
        <res id="TargetPanel.dir" src="/prj/treescan/build/treescan/installers/izpack/windows/TargetDir.txt" />
        -->
    </resources>

    <listeners>
        <listener installer="RegistryInstallerListener"
            uninstaller="RegistryUninstallerListener" >
            <os family="windows"/>
        </listener>
    </listeners>

    <native type="3rdparty" name="COIOSHelper.dll" stage="both">
      <os family="windows"/>
    </native>

    <native type="3rdparty" name="COIOSHelper_x64.dll" stage="both">
      <os family="windows"/>
    </native>

    <native type="izpack" name="ShellLink.dll"/>
    <native type="izpack" name="ShellLink_x64.dll"/>

    <variables>
       <variable name="DesktopShortcutCheckboxEnabled" value="true"/>
    </variables>

    <!--
        The panels section.
        We indicate here which panels we want to use. The order will be respected.
    -->
    <panels>
        <panel classname="CheckedHelloPanel"/>
        <panel classname="HTMLLicencePanel"/>

        <!-- We might want this if we decide to use a run script
        <panel classname="JDKPathPanel"/>
        -->

        <panel classname="TargetPanel"/>
        <panel classname="InstallPanel"/>
        <panel classname="ShortcutPanel"/>
		<!--
        <panel classname="SimpleFinishPanel"/>
		-->
        <panel classname="FinishPanel"/>
    </panels>

    <!--
        The packs section.
        We specify here our packs.
    -->
    <packs>
        <pack name="Base" required="yes">
            <description>Base Application Files</description>
            <file src="/prj/treescan/build/treescan/java_application/jni_application/dist/TreeScan.jar" targetdir="$INSTALL_PATH"/>
            <file src="/prj/treescan/build/treescan/installers/documents/userguide.pdf" targetdir="$INSTALL_PATH"/>
        </pack>

        <pack name="Windows Specific Files" required="yes" os="windows">
            <description>Windows Specific Files</description>
            <file src="/prj/treescan/build/treescan/java_application/jni_application/dist/TreeScan.exe" targetdir="$INSTALL_PATH" /> />
            <file src="/prj/treescan/build/treescan/batch_application/Win32/Release/treescan32.exe" targetdir="$INSTALL_PATH" /> />
            <file src="/prj/treescan/build/treescan/library/Win32/Release/treescan32.dll" targetdir="$INSTALL_PATH" />
            <file src="/prj/treescan/build/treescan/batch_application/x64/Release/treescan64.exe" targetdir="$INSTALL_PATH" /> />
            <file src="/prj/treescan/build/treescan/library/x64/Release/treescan64.dll" targetdir="$INSTALL_PATH" />
            <file src="/prj/treescan/build/treescan/installers/resources/TreeScan.ico" targetdir="$INSTALL_PATH" />
        </pack>

        <pack name="Java Support Libraries" required="yes">
            <description>Java Support Libraries</description>
            <file src="/prj/treescan/build/treescan/java_application/jni_application/dist/lib" targetdir="$INSTALL_PATH"/> <!-- Reccursive adding -->
        </pack>

        <pack name="Example Data" required="no">
            <description>Example Data Sets</description>
            <file src="/prj/treescan/build/treescan/installers/examples" targetdir="$INSTALL_PATH"/> <!-- Reccursive adding -->
        </pack>
    </packs>

</installation>
