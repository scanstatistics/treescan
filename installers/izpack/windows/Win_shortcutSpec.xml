<shortcuts>
  <skipIfNotSupported/>
  <programGroup defaultName="TreeScan"
                location="applications"/>
  <shortcut
    name="TreeScan"
    target="$INSTALL_PATH\TreeScan.exe"
    commandLine=""
    workingDirectory="$INSTALL_PATH"
    type="Application"
    description="TreeScan - Software for the Tree Scan Statistics"
    iconFile="$INSTALL_PATH\TreeScan.ico"
    iconIndex="0"
    initialState="normal"
    programGroup="yes"
    desktop="yes"
    applications="no"
    startMenu="no"
    startup="no">
    <createForPack name="Base"/>
  </shortcut>

