<izpack:shortcuts version="5.0"                                                                                                 
                  xmlns:izpack="http://izpack.org/schema/shortcuts"                                                             
                  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"                                                         
                  xsi:schemaLocation="http://izpack.org/schema/shortcuts http://izpack.org/schema/5.0/izpack-shortcuts-5.0.xsd">

  <skipIfNotSupported/>
  <programGroup defaultName="TreeScan"
                location="applications"/>
  <shortcut
    name="TreeScan"
    target="java"
    commandLine="-jar -Djava.library.path=$INSTALL_PATH &quot;$INSTALL_PATH/TreeScan.jar&quot;"
    workingDirectory="$INSTALL_PATH"
    description="TreeScan - Software for the Tree Scan Statistics"
    iconFile="$INSTALL_PATH/TreeScan.png"
    iconIndex="0"
    initialState="normal"
    type="Application"
    encoding="UTF-8"
    programGroup="yes"
    desktop="yes"
    applications="no"
    startMenu="no"
    startup="no">
    <createForPack name="Base"/>
  </shortcut>

  <shortcut
    name="TreeScan User's Guide"
    target="acroread"
    url="$INSTALL_PATH/userguide.pdf"
    commandLine="$INSTALL_PATH/userguide.pdf"
    workingDirectory=""
    type="Application"
    description="TreeScan Users Guide"
    initialState="normal"
    programGroup="yes"
    desktop="no"
    applications="no"
    encoding="UTF-8"
    startMenu="no"
    startup="no"
    iconFile="acroread"
    iconIndex="0">
    <createForPack name="Base"/>
  </shortcut>
  <!--
  <shortcut
    name="TreeScan User's Guide"
    target="java"
    commandLine="-jar -Djava.library.path=$INSTALL_PATH/lib &quot;$INSTALL_PATH/lib/TreeScan_Help.jar&quot;"
    workingDirectory="$INSTALL_PATH"
    description="TreeScan User's Guide"
    iconFile="$INSTALL_PATH/TreeScan.png"
    iconIndex="0"
    initialState="normal"
    type="Application"
    encoding="UTF-8"
    programGroup="yes"
    desktop="yes"
    applications="no"
    startMenu="no"
    startup="no">
    <createForPack name="Base"/>
  </shortcut>
  -->

  <shortcut name="Uninstall TreeScan"
    target="java"
    commandLine="-jar &quot;$INSTALL_PATH/Uninstaller/uninstaller.jar&quot; -x -f"
    programGroup="yes"
    encoding="UTF-8"
    type="Application"
    desktop="no"
    applications="no"
    description="Uninstall TreeScan Application">
    <createForPack name="Base" />
  </shortcut>
</izpack:shortcuts>
